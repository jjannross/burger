<div class="container">
    <div class="row" style="text-align: center">
        <div class="col-sm-12">
            <h1>Time for a Burger!</h1>
            <i class="fas fa-hamburger fa-10x"></i>
        </div>
    </div>
    <div class="row">

        <div class="col-sm-6">
            <h3>Burgers to Eat</h3>
            <ul>
                {{#each burgerData}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6">
            <h3>Burgers Eaten</h3>
            <ul>
                {{#each burgerData}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}

                {{/if}}
                {{/each}}
            </ul>

        </div>

    </div>
    <div class="row" style="align: center">
        <form class="input-container">
            {{!-- <div class="input-container"> --}}
                <input class="effect-1" id="burger_name" type="text" placeholder="enter burger here!">
                <button id="addMenu">Add to the Menu!</button>
                <span class="focus-border"></span>

                {{!--
            </div> --}}
        </form>
